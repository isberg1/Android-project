<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">




    <TextureView
        android:id="@+id/texture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@id/texture"
        android:text="" />

    <Button
        android:id="@+id/btn_speak"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:onClick="buttonClick"
        android:text="btn_speak" />




    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/table1">




    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >


        <TextView
            android:id="@+id/errorView1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="errors are displayed her" />

        <Button
            android:id="@+id/btn_takepicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/take_picture" />




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="btnGPS"
            android:id="@+id/btnGPS"
            android:onClick="GoToGPS"/>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show stats"
            android:id="@+id/btn_show_stats"
            android:onClick="GoToStats"/>



    </TableRow>




</LinearLayout>